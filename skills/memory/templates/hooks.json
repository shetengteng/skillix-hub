{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/load_memory.py",
        "timeout": 10
      }
    ],
    "preCompact": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/flush_memory.py",
        "timeout": 5
      }
    ],
    "stop": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/prompt_session_save.py",
        "loop_limit": 1
      }
    ],
    "postToolUse": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/audit_tool_use.py",
        "matcher": "Shell",
        "timeout": 5
      }
    ],
    "afterAgentResponse": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/audit_response.py",
        "timeout": 5
      }
    ],
    "afterAgentThought": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/audit_thought.py",
        "timeout": 5
      }
    ],
    "sessionEnd": [
      {
        "command": "python3 {{SKILL_PATH}}/scripts/service/hooks/sync_and_cleanup.py",
        "timeout": 30
      }
    ]
  }
}
