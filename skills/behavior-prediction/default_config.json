{
  "version": "2.0",
  "enabled": true,
  "recording": {
    "enabled": true,
    "retention_days": 90
  },
  "patterns": {
    "extraction_enabled": true,
    "min_sessions_for_pattern": 3
  },
  "profile": {
    "auto_update": true,
    "update_interval_sessions": 10
  },
  "prediction": {
    "enabled": true,
    "suggest_threshold": 0.5,
    "max_suggestions": 3,
    "auto_execute": {
      "enabled": true,
      "threshold": 0.85,
      "allowed_actions": [
        "run_test",
        "run_lint",
        "git_status",
        "git_add"
      ],
      "forbidden_actions": [
        "delete_file",
        "git_push",
        "git_reset",
        "deploy",
        "rm",
        "drop"
      ],
      "require_confirmation_below": 0.95
    }
  }
}
